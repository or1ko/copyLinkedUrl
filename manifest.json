{
    "manifest_version": 2,
    "name": "copy title and url",
    "version": "1.1",
    "homepage_url": "https://github.com/or1ko/copyLinkedUrl",

    "default_locale": "en",
  
    "description": "Copy the current page title and url. text/plain and text/html to the clipboard.",
  
    "icons": {
      "48": "icons/icon-48.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "activeTab",
        "menus",
        "clipboardWrite"
    ]
}